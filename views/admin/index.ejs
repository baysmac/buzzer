<% layout('../layout-main') -%>
<h1>Quizzes</h1>
<a href="/admin/quiz/add" class="cta" id="add-quiz">Add quiz</a>
<% if (successMessage != '') { %>
	<p class="msg-success"><%= successMessage %></p>
<% } %>
<% if(quizzes.length > 0) { %>
	<ul class="list">
		<% for(var i=0; i< quizzes.length; i++) {
			var quiz = quizzes[i];
		%>
			<li>
				<span class="heading"><%= quiz.title %></span>
				<div class="actions">
					<a href="/admin/quiz/edit/<%= quiz.id %>" class="cta">Edit</a>
					<a href="/admin/quiz/host/<%= quiz.id %>" class="cta">Host</a>
					<a href="/admin/quiz/console/<%= quiz.id %>" class="cta">Console</a>
				</div>
			</li>
		<% } %>
	</ul>
<% } else { %>
	<p>No quizzes found.</p>
<% } %>