<% layout('layout-main') -%>
<h1>Active Quizzes</h1>
<% if(quizzes.length > 0) { %>
	<ul class="list">
		<% for(var i=0; i< quizzes.length; i++) {
			var quiz = quizzes[i];
		%>
			<li>
				<span class="heading"><%= quiz.title %></span>
				<div class="actions">
					<a href="/play/<%= quiz.id %>" class="cta">Play</a>
				</div>
			</li>
		<% } %>
	</ul>
<% } else { %>
	<p>No active quizzes found.</p>
<% } %>