<% layout('layout-main') -%>
<h1>Welcome</h1>
<p>Welcome to buzzer. If you are on this page, you are lucky enough to be taking part in our pub quiz.</p>
<p>Got a drink? Great. Once in your teams, please sign up below (one registration per team please).</p>
<% if (message != '') { %>
	<p class="msg-error"><%= message %></p>
<% } %>
<form action="/register" method="post" id="register">
	<h2>Register</h2>
	<dl>
		<dt>
			<label for="register_username">Team Name:</label>
		</dt>
		<dd>
			<input type="text" name="register_username" required />
		</dd>
		<dt>
			<label for="register_password">Password:</label>
		</dt>
		<dd>
			<input type="password" name="register_password" required />
		</dd>
	</dl>
	<input type="submit" value="Sign up" />
</form>
<form action="/login" method="post" id="log-in">
	<h2>Log in</h2>
	<dl>
		<dt>
			<label for="login_name">Team Name:</label>
		</dt>
		<dd>
			<input type="text" name="username" required />
		</dd>
		<dt>
			<label for="login_password">Password:</label>
		</dt>
		<dd>
			<input type="password" name="password" required />
		</dd>
	</dl>
	<input type="submit" value="Log in" />
</form>